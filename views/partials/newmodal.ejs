<div class="modal" style="padding-top: 10vh" id="new-modal">
  <div class="columns is-mobile is-centered">
    <div class="column is-full-mobile is-three-quarters-tablet">
      <div class="modal-background"></div>
      <div class="modal-card">
        <header class="modal-card-head">
          <p class="modal-card-title is-size-5-mobile">CREATE A NEW POST</p>
          <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
          <form action="/posts" method="POST" enctype="multipart/form-data">
            <div class="field">
              <label for="title" class="label">Title</label>
              <div class="control has-icons-right">
                <input
                  class="input"
                  type="text"
                  id="title"
                  name="post[title]"
                  placeholder="𝓉𝒾𝓉𝓁𝑒.."
                />
                <span class="icon is-small is-right">
                  <i
                    class="fas fa-check"
                    id="titleSuccessIcon"
                    style="display: none"
                  ></i>
                </span>
                <span class="icon is-small is-right">
                  <i
                    class="fas fa-exclamation-triangle"
                    id="titleErrorIcon"
                    style="display: none"
                  ></i>
                </span>
                <p
                  id="title_error"
                  class="help is-error"
                  style="
                    display: none;
                    font-family: 'Courier New', Courier, monospace;
                    font-size: medium;
                  "
                >
                  Give a nice title to your post
                </p>
              </div>
            </div>
            <div class="field">
              <div id="file-js-example" class="file has-name is-fullwidth">
                <label class="file-label">
                  <input
                    class="file-input"
                    type="file"
                    name="image"
                    placeholder="𝒸𝒽𝑜𝑜𝓈𝑒 𝒾𝓂𝒶𝑔𝑒(𝓈).."
                    multiple
                  />
                  <span class="file-cta">
                    <span class="file-icon">
                      <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label"> 𝒷𝓇𝑜𝓌𝓈𝑒 </span>
                  </span>
                  <span
                    class="file-name"
                    style="font-weight: 100; color: lightgray"
                  >
                    𝒸𝒽𝑜𝑜𝓈𝑒 𝒾𝓂𝒶𝑔𝑒(𝓈)..
                  </span>
                </label>
              </div>
            </div>
            <div class="field" id="new-body">
              <label for="body" class="label">Body</label>
              <div class="control has-icons-right">
                <textarea
                  class="textarea new-area"
                  rows="5"
                  id="body"
                  name="post[body]"
                  placeholder="𝒶 𝓃𝒾𝒸𝑒 𝓅𝑜𝓈𝓉 𝓃𝑒𝑒𝒹𝓈 𝒶 𝓃𝒾𝒸𝑒 𝒹𝑒𝓈𝒸𝓇𝒾𝓅𝓉𝒾𝑜𝓃.."
                ></textarea>
                <span class="icon is-small is-right">
                  <i
                    class="fas fa-check"
                    id="bodySuccessIcon"
                    style="display: none"
                  ></i>
                </span>
                <span class="icon is-small is-right">
                  <i
                    class="fas fa-exclamation-triangle"
                    id="bodyErrorIcon"
                    style="display: none"
                  ></i>
                </span>
                <p
                  id="body_error"
                  class="help is-error"
                  style="
                    display: none;
                    font-family: 'Courier New', Courier, monospace;
                    font-size: medium;
                  "
                >
                  a post without body is nonsense
                </p>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <button
                  class="button is-primary is-fullwidth"
                  id="newpost"
                  type="submit"
                  disabled="true"
                >
                  ADD
                </button>
              </div>
            </div>
          </form>
        </section>
        <footer class="modal-card-foot"></footer>
      </div>
    </div>
  </div>
</div>
