<% layout('layout/boilerplate') -%>
<div class="columns is-mobile is-centered">
  <div class="column is-three-quarters-mobile is-half-tablet">
    <h1 class="title">showing posts</h1>
    <% for(let post of posts) { %>
    <div class="card mb-5">
      <div class="card-image">
        <figure class="image is-4by3">
          <img
            src="https://bulma.io/images/placeholders/1280x960.png"
            alt="Placeholder image"
          />
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img
                src="https://bulma.io/images/placeholders/96x96.png"
                alt="Placeholder image"
              />
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4"><%=post.title%></p>
            <p class="subtitle is-6"><%=post.author%></p>
          </div>
        </div>
        
        <div class="content">
          <a href="/posts/<%=post.id%>">open</a>
          <br />
          <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
        </div>
      </div>
      <footer class="card-footer">
        <a href="#" class="card-footer-item"><i class="far fa-heart" id="like" style="display: block;"></i><i class="fas fa-heart" id="dislike" style="display: none;"></i>Like</a>
        <a href="#" class="card-footer-item"><i class="fas fa-comments"></i>Comments</a>
      </footer>
    </div>
    <% }%>
  </div>
</div>
